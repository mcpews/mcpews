{
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2020",
    "lib": [ "ES2020" ],
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/test.ts"
  ]
}